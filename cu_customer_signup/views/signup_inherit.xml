<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="auth_signup.signup" name="Sign up login">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="../static/src/js/signup.js"></script>
        </xpath>
        <t t-call="web.login_layout">
            <form class="oe_signup_form" role="form" method="post" t-if="not message">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                <div class="container">
                    <h2 class="text-center">Zoon Account SignUp</h2>

                    <!-- Progress Bar -->
                    <div class="progress-bar mb-4">
                        <div class="progress-step" id="step-1-indicator">Step 1: Contact Details</div>
                        <div class="progress-step" id="step-2-indicator">Step 2: Miscellaneous</div>
                        <div class="progress-step" id="step-3-indicator">Step 3: Account Details</div>
                    </div>

                    <!-- Step 1 -->
                    <div class="step" id="step-1">
                        <h4 class="section-title">Contact Details</h4>
                        <div class="mb-3">
                            <label for="name">First Name</label>
                            <input type="text" name="name" id="name" class="form-field" placeholder="John" required="required" />
                        </div>
                        <div class="mb-3">
                            <label for="last_name">Last Name</label>
                            <input type="text" name="last_name" id="last_name" class="form-field" placeholder="Doe" required="required" />
                        </div>
                        <div class="mb-3">
                            <label for="login">Email</label>
                            <input type="email" name="login" id="login" class="form-field" required="required" />
                        </div>
                        <button type="button" class="btn btn-primary next-button" data-next="step-2">Next</button>
                    </div>

                    <!-- Step 2 -->
                    <div class="step d-none" id="step-2">
                        <h4 class="section-title">Miscellaneous</h4>
                        <div class="mb-3">
                            <label for="registration_method">Registration Method</label>
                            <select name="registration_method" id="registration_method" class="form-field" required="required">
                                <option value="Amazonia Mall">Amazonia Mall</option>
                                <option value="West Central Mall">West Central Mall</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="source">How did you find out about us?</label>
                            <select name="source" id="source" class="form-field" required="required">
                                <option value="TV">TV</option>
                                <option value="Referral">Referral</option>
                            </select>
                        </div>
                        <button type="button" class="btn btn-secondary prev-button" data-prev="step-1">Previous</button>
                        <button type="button" class="btn btn-primary next-button" data-next="step-3">Next</button>
                    </div>

                    <!-- Step 3 -->
                    <div class="step d-none" id="step-3">
                        <h4 class="section-title">Account Specifics</h4>
                        <div class="mb-3">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="password" class="form-field" required="required" />
                        </div>
                        <div class="mb-3">
                            <label for="confirm_password">Confirm Password</label>
                            <input type="password" name="confirm_password" id="confirm_password" class="form-field" required="required" />
                        </div>
                        <button type="button" class="btn btn-secondary prev-button" data-prev="step-2">Previous</button>
                        <button type="submit" class="btn btn-primary">Sign up</button>
                    </div>
                </div>
            </form>
        </t>
    </template>
</odoo>
